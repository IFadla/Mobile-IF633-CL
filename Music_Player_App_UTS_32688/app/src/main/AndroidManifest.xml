<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="umn.ac.id.music_player_app_uts_32688">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ava_profile"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Music_Player_App_UTS_32688">
        <activity android:name=".ReferencesActivity"></activity>
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/Theme.Music_Player_App_UTS_32688.noActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayerActivity"
            android:theme="@style/CustomActionBarTheme" />
        <activity
            android:name=".ListMusicActivity"
            android:label="@string/titleListMusic"
            android:theme="@style/CustomActionBarTheme" />
        <activity
            android:name=".ViewProfileActivity"
            android:label="@string/titleProfile"
            android:parentActivityName=".MainActivity"
            android:theme="@style/CustomActionBarTheme" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/titleLogin"
            android:parentActivityName=".MainActivity"
            android:theme="@style/CustomActionBarTheme" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Music_Player_App_UTS_32688.noActionBar"></activity>
    </application>

</manifest>