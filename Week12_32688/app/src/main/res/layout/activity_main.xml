    <Button
        android:onClick="tutorialSatu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:text="Deteksi Sensor"/>

    <Button
        android:onClick="tutorialDua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
